{
  "name": "@kronos-integration/service-repositories",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "exports": {
    ".": "./src/service-repositories.mjs"
  },
  "description": "repository provider",
  "keywords": [
    "kronos-service"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme --section=API ./src/**/*.mjs",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/**/*.mjs"
  },
  "dependencies": {
    "@kronos-integration/service": "^11.0.0",
    "aggregation-repository-provider": "^6.1.9",
    "model-attributes": "^4.2.2"
  },
  "devDependencies": {
    "ava": "^6.1.3",
    "c8": "^9.1.0",
    "documentation": "^14.0.3",
    "gitea-repository-provider": "^4.2.3",
    "github-repository-provider": "^9.0.17",
    "semantic-release": "^24.0.0"
  },
  "engines": {
    "node": ">=22.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kronos-Integration/service-repositories.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/service-repositories/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/service-repositories#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-component"
    ]
  }
}
